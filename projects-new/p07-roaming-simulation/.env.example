# Roaming Simulation Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/roaming_db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# =============================================================================
# Simulation Settings
# =============================================================================
SIMULATION_TIMEOUT=300
MAX_CONCURRENT_SIMULATIONS=10
