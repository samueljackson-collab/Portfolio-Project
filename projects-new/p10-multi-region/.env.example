# Multi-Region Deployment Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Primary Region Configuration
# =============================================================================
PRIMARY_REGION=us-east-1
PRIMARY_DATABASE_URL=postgresql://user:password@primary-db:5432/app_db

# =============================================================================
# Secondary Region Configuration
# =============================================================================
SECONDARY_REGION=us-west-2
SECONDARY_DATABASE_URL=postgresql://user:password@secondary-db:5432/app_db

# =============================================================================
# Replication Settings
# =============================================================================
REPLICATION_MODE=async
REPLICATION_LAG_THRESHOLD_MS=1000

# =============================================================================
# DNS/Load Balancing
# =============================================================================
DNS_PROVIDER=route53
HEALTH_CHECK_INTERVAL=30
FAILOVER_THRESHOLD=3
