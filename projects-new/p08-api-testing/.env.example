# API Configuration - Copy to .env and update values

# API Base URL
API_BASE_URL=http://localhost:8080

# Authentication Credentials
API_CLIENT_ID=demo
API_CLIENT_SECRET=secret

# Request Configuration
API_TIMEOUT=10
API_RETRIES=3
API_RETRY_DELAY=1

# Test Configuration
TEST_ENVIRONMENT=local
TEST_VERBOSE=false
TEST_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=tests/pytest.log

# Database Configuration (if applicable)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=api_test
DB_USER=test_user
DB_PASSWORD=test_password

# Email Configuration (for test notifications)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=test@example.com
EMAIL_TO=admin@example.com

# Slack Notifications (for CI/CD)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#api-tests

# Proxy Configuration (if applicable)
HTTP_PROXY=
HTTPS_PROXY=

# Performance Testing
PERFORMANCE_THRESHOLD_MS=1000
CONCURRENT_REQUESTS=10

# Data Management
CLEAN_DATA_AFTER_TESTS=true
RESET_DATABASE_BEFORE_TESTS=false
SEED_TEST_DATA=true

# Feature Flags
FEATURE_NEW_ENDPOINTS=false
FEATURE_OAUTH2=false
FEATURE_GRAPHQL=false

# Custom Headers
CUSTOM_HEADER_API_KEY=
CUSTOM_HEADER_TRACE_ID=
CUSTOM_HEADER_USER_AGENT=API-Test-Suite/1.0

# SSL/TLS Configuration
VERIFY_SSL=true
CA_BUNDLE_PATH=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Retry Configuration
RETRY_ON_STATUS_CODES=408,429,500,502,503,504
RETRY_BACKOFF_FACTOR=2

# Newman Configuration (for Postman)
NEWMAN_TIMEOUT=10000
NEWMAN_DELAY=100
NEWMAN_REPORTERS=json,cli
NEWMAN_BAIL=true

# Reporting
REPORT_FORMAT=json
REPORT_DIRECTORY=./reports
REPORT_TIMESTAMP=true

# Debug Mode
DEBUG=false
DEBUG_REQUESTS=false
DEBUG_RESPONSES=false
