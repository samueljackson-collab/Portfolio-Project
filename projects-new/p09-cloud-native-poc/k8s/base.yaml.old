apiVersion: apps/v1
kind: Deployment
metadata:
  name: poc-api
spec:
  replicas: 2
  selector:
    matchLabels:
      app: poc-api
  template:
    metadata:
      labels:
        app: poc-api
    spec:
      containers:
        - name: api
          image: poc-api:latest
          command: ["uvicorn", "producer.app:app", "--host", "0.0.0.0", "--port", "8000"]
          ports:
            - containerPort: 8000
          readinessProbe:
            httpGet:
              path: /health
              port: 8000
            periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: poc-api
spec:
  selector:
    app: poc-api
  ports:
    - port: 80
      targetPort: 8000
