# Example Secret Template
# DO NOT apply this file directly to production
# See README.md for instructions on creating actual secrets

apiVersion: v1
kind: Secret
metadata:
  name: poc-api-secrets
  namespace: poc-api
  labels:
    app: poc-api
stringData:
  API_KEY: "your-api-key-here"
  DATABASE_URL: "postgresql://app_user:your-password@postgres:5432/pocdb"
  REDIS_URL: "redis://redis:6379/0"

---
apiVersion: v1
kind: Secret
metadata:
  name: postgres-credentials
  namespace: poc-api
  labels:
    app: postgres
stringData:
  POSTGRES_USER: "app_user"
  POSTGRES_PASSWORD: "your-password-here"
