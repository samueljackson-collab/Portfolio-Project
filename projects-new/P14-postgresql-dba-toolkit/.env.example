# PostgreSQL connection
PGHOST=localhost
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres
PGPASSWORD=postgres
PGSSLMODE=prefer

# Backup settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=14
BACKUP_FORMAT=custom
BACKUP_COMPRESS_LEVEL=6

# S3 settings (optional)
S3_BUCKET=
S3_PREFIX=postgresql-backups
S3_SSE=AES256

# Reporting
REPORT_DIR=./reports

# Migration settings
MIGRATIONS_DIR=./migrations
