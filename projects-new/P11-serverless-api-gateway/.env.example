# Environment Configuration for P11 Serverless API Gateway

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCOUNT_ID=123456789012

# Deployment Configuration
ENVIRONMENT=dev
STACK_NAME=serverless-api-gateway-stack

# DynamoDB Configuration
TABLE_NAME=items-table-dev
DYNAMODB_REGION=us-east-1

# API Gateway Configuration
API_GATEWAY_STAGE=dev
API_GATEWAY_ENDPOINT=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/dev

# Authentication
ALLOWED_API_KEYS=dev-key-12345,prod-key-67890

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_XRAY_TRACING=true

# Application Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=256

# Testing Configuration
TEST_ENVIRONMENT=test
TEST_TABLE_NAME=items-table-test

# SAM CLI Configuration
SAM_CLI_TELEMETRY=0
