# Twisted Monk Suite v1 - Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (set to False in production)
DEBUG=False

# Application port
PORT=8000

# Secret key for signing (generate a random string for production)
SECRET_KEY=change-me-in-production-use-a-random-secure-string

# Application version
VERSION=1.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=yourdomain.com,*.yourdomain.com,localhost

# Allowed origins for CORS (comma-separated list)
ALLOWED_ORIGINS=https://yourshop.myshopify.com,https://yourdomain.com

# =============================================================================
# REDIS CACHE SETTINGS
# =============================================================================

# Enable Redis caching
REDIS_ENABLED=True

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis database number
REDIS_DB=0

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL=3600

# =============================================================================
# DATABASE SETTINGS (for future use)
# =============================================================================

# Database URL
DATABASE_URL=sqlite:///./twisted_monk.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# =============================================================================
# SHOPIFY INTEGRATION
# =============================================================================

# Shopify API credentials
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_SHOP_URL=yourshop.myshopify.com

# Shopify API version
SHOPIFY_API_VERSION=2024-01

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Slack webhook URL for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email SMTP settings
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=alerts@twistedmonk.com

# Email recipients for alerts (comma-separated)
EMAIL_TO=team@twistedmonk.com,inventory@twistedmonk.com

# =============================================================================
# INVENTORY THRESHOLDS
# =============================================================================

# Low stock threshold (show warning when below this level)
LOW_STOCK_THRESHOLD=50

# Critical stock threshold (show critical alert when below this level)
CRITICAL_STOCK_THRESHOLD=10

# =============================================================================
# LEAD TIME SETTINGS
# =============================================================================

# Default lead time in days
DEFAULT_LEAD_TIME_DAYS=7

# Maximum lead time in days
MAX_LEAD_TIME_DAYS=60

# =============================================================================
# API RATE LIMITING
# =============================================================================

# Rate limit for health endpoint (requests per minute)
HEALTH_RATE_LIMIT=60/minute

# Rate limit for lead time endpoint (requests per minute)
LEAD_TIME_RATE_LIMIT=30/minute

# Rate limit for inventory endpoint (requests per minute)
INVENTORY_RATE_LIMIT=60/minute

# Rate limit for bundles endpoint (requests per minute)
BUNDLES_RATE_LIMIT=30/minute

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Sentry environment
SENTRY_ENVIRONMENT=production

# =============================================================================
# n8n WORKFLOW SETTINGS (for operations/n8n_workflow.json)
# =============================================================================

# API base URL for n8n workflow
API_BASE_URL=https://api.yourdomain.com

# Admin dashboard URL
ADMIN_URL=https://admin.yourdomain.com

# Airtable base ID (optional, for logging)
AIRTABLE_BASE_ID=

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Docker registry for image push
DOCKER_REGISTRY=

# Deployment environment
DEPLOY_ENV=production

# Health check URL
HEALTH_CHECK_URL=http://localhost:8000/health

# =============================================================================
# ADDITIONAL SETTINGS
# =============================================================================

# Enable analytics tracking
ENABLE_ANALYTICS=True

# Analytics provider
ANALYTICS_PROVIDER=google

# Google Analytics tracking ID
GA_TRACKING_ID=

# Feature flags (comma-separated)
FEATURE_FLAGS=bundle_recommendations,urgency_banners,stock_notifications

# Maintenance mode
MAINTENANCE_MODE=False
