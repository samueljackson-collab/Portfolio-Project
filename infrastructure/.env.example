# Copy this file to .env and customize the secrets before running the stack.
# Values marked CHANGE_ME should be replaced with secure secrets.

# Global
TIMEZONE=UTC

# Matomo
MATOMO_HTTP_PORT=8080
MATOMO_DB_DATABASE=matomo
MATOMO_DB_USERNAME=matomo
MATOMO_DB_PASSWORD=CHANGE_ME_MATOMO_DB_PASSWORD
MATOMO_DB_ROOT_PASSWORD=CHANGE_ME_MATOMO_DB_ROOT_PASSWORD
MATOMO_DB_ADAPTER=PDO_MYSQL
MATOMO_ENABLE_TRUSTED_HOST_CHECK=0

# n8n
N8N_HTTP_PORT=5678
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_N8N_PASSWORD
N8N_ENCRYPTION_KEY=CHANGE_ME_32_CHAR_HEX_KEY
N8N_HOST=n8n.local
N8N_WEBHOOK_URL=

# Text Generation Inference (LLM)
LLM_HTTP_PORT=8081
LLM_MODEL_ID=TinyLlama/TinyLlama-1.1B-Chat-v1.0
LLM_NUM_SHARD=1
LLM_MAX_INPUT_LENGTH=4096
LLM_MAX_TOTAL_TOKENS=4096
HUGGINGFACEHUB_API_TOKEN=

# Stable Diffusion / InvokeAI
STABLE_DIFFUSION_HTTP_PORT=9090
STABLE_DIFFUSION_MODEL_ID=runwayml/stable-diffusion-v1-5
INVOKEAI_WEB_UI_PASSWORD=CHANGE_ME_INVOKEAI_PASSWORD

# Whisper ASR
WHISPER_HTTP_PORT=9000
WHISPER_MODEL_SIZE=small
WHISPER_ENGINE=cpu

# Scrapy / Scrapyd
SCRAPYD_HTTP_PORT=6800
SCRAPYD_USERNAME=admin
SCRAPYD_PASSWORD=CHANGE_ME_SCRAPYD_PASSWORD
