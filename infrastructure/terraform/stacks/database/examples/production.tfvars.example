# Production environment configuration example.
# Copy this file to production.tfvars and update the values before running terraform apply.
project_name = "customer-analytics"
environment  = "prod"
aws_region   = "us-west-2"

# Remote state configuration (shared across platform team).
state_bucket_name = "terraform-state-prod"
state_lock_table  = "terraform-locks"

deployment_role_arn = "arn:aws:iam::123456789012:role/terraform-deploy-prod"

# Networking configuration using the shared production VPC.
vpc_id     = "vpc-0abc1234def567890"
subnet_ids = [
  "subnet-0a1b2c3d4e5f6a7b",
  "subnet-0123abcd4567efgh"
]

allowed_security_group_ids = [
  "sg-0123456789abcdef0", # Web application tier
  "sg-0fedcba9876543210"  # Analytics batch workers
]

db_username = "app_admin"
# WARNING: Do not store plaintext passwords in tfvars. Supply TF_VAR_db_password via a secrets manager or CI secret store.

instance_class                       = "db.r6g.large"
allocated_storage                    = 200
max_allocated_storage                = 1024
multi_az                             = true
backup_retention_period              = 14
deletion_protection                 = true
skip_final_snapshot                  = false
apply_immediately                    = false
performance_insights_enabled         = true
performance_insights_retention_period = 731

engine_version = "15.4"

tags = {
  "Owner"       = "platform-team",
  "CostCenter"  = "FIN-001",
  "DataClass"   = "PII",
  "Compliance"  = "PCI-DSS"
}
