{
  "name": "portfolio-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Full-stack portfolio platform",
  "scripts": {
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd projects/frontend && npm run lint",
    "lint:backend": "ruff check projects/backend/app",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd projects/frontend && npm run test",
    "test:backend": "pytest --cov=projects/backend/app --cov-report=term-missing projects/backend/app/tests",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd projects/frontend && npm run build",
    "build:backend": "cd projects/backend && uvicorn app.main:app --host 0.0.0.0 --port 8000"
  }
}
