{
  "kind": "Pod",
  "metadata": {
    "name": "insecure-pod",
    "labels": {
      "app": "sample"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "app",
        "image": "example/app:latest",
        "securityContext": {
          "runAsNonRoot": false,
          "runAsUser": 0,
          "privileged": true,
          "allowPrivilegeEscalation": true,
          "readOnlyRootFilesystem": false,
          "capabilities": {
            "add": ["SYS_ADMIN"],
            "drop": []
          }
        },
        "resources": {
          "limits": {
            "cpu": "500m"
          },
          "requests": {}
        }
      }
    ],
    "automountServiceAccountToken": true,
    "serviceAccountName": "default",
    "hostPID": true,
    "hostIPC": false,
    "hostNetwork": false
  }
}
