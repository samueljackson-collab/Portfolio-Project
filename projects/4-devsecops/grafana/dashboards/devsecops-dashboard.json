{
  "dashboard": {
    "title": "DevSecOps Security Dashboard",
    "tags": ["devsecops", "security", "compliance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Vulnerability Summary",
        "type": "stat",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum by (severity) (trivy_vulnerabilities)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Security Scan Results Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum by (severity) (rate(trivy_vulnerabilities[1h]))",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Code Quality Metrics",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "sonarqube_code_quality_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": null, "color": "red"},
                {"value": 60, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Falco Security Alerts",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(falco_alerts_total[5m])",
            "legendFormat": "{{priority}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
