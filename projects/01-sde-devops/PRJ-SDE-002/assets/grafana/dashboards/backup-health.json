{
  "uid": "pbs-health",
  "title": "Backup & PBS Health",
  "schemaVersion": 39,
  "version": 1,
  "tags": ["pbs", "backups", "prj-sde-002"],
  "panels": [
    {
      "type": "row",
      "title": "Runway & Compliance",
      "id": 1,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "stat",
      "title": "Success Rate (24h)",
      "id": 2,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "1 - (increase(pbs_task_failed_total{task_type=\"backup\"}[24h]) / increase(pbs_task_total{task_type=\"backup\"}[24h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {"mode": "percentage", "steps": [{"color": "red"}, {"color": "orange", "value": 0.95}, {"color": "green", "value": 0.98}]}
        },
        "overrides": []
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 1},
      "options": {"colorMode": "value", "graphMode": "none", "justifyMode": "center"}
    },
    {
      "type": "gauge",
      "title": "Repository Utilization",
      "id": 3,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "pbs_datastore_used_bytes{datastore=\"$datastore\"} / pbs_datastore_total_bytes{datastore=\"$datastore\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green"}, {"color": "orange", "value": 0.7}, {"color": "red", "value": 0.85}]}
        },
        "overrides": []
      },
      "options": {"reduceOptions": {"calcs": ["lastNotNull"], "values": false}},
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 1}
    },
    {
      "type": "timeseries",
      "title": "Backup Duration (p95)",
      "id": 4,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(pbs_backup_duration_seconds_bucket[5m])) by (le, datastore))",
          "legendFormat": "{{datastore}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1},
      "fieldConfig": {"defaults": {"unit": "s"}, "overrides": []},
      "options": {"legend": {"displayMode": "list", "placement": "bottom"}}
    },
    {
      "type": "stat",
      "title": "Retention Drift (1h)",
      "id": 5,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {"expr": "increase(pbs_retention_policy_drift_total[1h])", "refId": "A"}
      ],
      "fieldConfig": {"defaults": {"thresholds": {"mode": "absolute", "steps": [{"color": "green"}, {"color": "red", "value": 1}]}}},
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 5},
      "options": {"reduceOptions": {"calcs": ["lastNotNull"], "values": false}}
    },
    {
      "type": "timeseries",
      "title": "Capacity Forecast (12h)",
      "id": 6,
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "predict_linear(pbs_datastore_used_bytes{datastore=\"$datastore\"}[2h], 12 * 3600) / pbs_datastore_total_bytes{datastore=\"$datastore\"}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 6, "y": 5},
      "fieldConfig": {"defaults": {"unit": "percentunit"}},
      "options": {"legend": {"displayMode": "hidden"}}
    },
    {
      "type": "table",
      "title": "Recent Tasks",
      "id": 7,
      "datasource": {"type": "loki", "uid": "loki"},
      "targets": [
        {
          "expr": "{job=\"pbs-logs\"} |= \"task finished\" | json | line_format \"{{ .task_type }} {{ .datastore }} {{ .status }}\"",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 9},
      "options": {"showHeader": true}
    }
  ],
  "templating": {
    "list": [
      {
        "name": "datastore",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "query": "label_values(pbs_datastore_used_bytes, datastore)",
        "refresh": 1,
        "current": {"text": "pbs-demo", "value": "pbs-demo"}
      }
    ]
  },
  "timezone": "browser",
  "time": {"from": "now-6h", "to": "now"}
}
