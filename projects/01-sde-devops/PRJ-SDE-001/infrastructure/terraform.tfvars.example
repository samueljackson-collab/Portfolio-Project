# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize for your environment
# NEVER commit terraform.tfvars to git (contains sensitive data)

# General Configuration
aws_region   = "us-east-1"
project_name = "myproject"
environment  = "dev" # Options: dev, staging, prod

# Database Configuration
db_username = "dbadmin"
db_password = "CHANGE_ME_MIN_8_CHARS" # ⚠️ Use a strong password, store in Secrets Manager

# Instance Sizing
db_instance_class        = "db.t3.small"  # Dev: db.t3.small, Prod: db.r5.large
db_allocated_storage     = 20             # Initial storage in GB
db_max_allocated_storage = 100            # Max autoscaling limit in GB

# Database Engine
db_engine_version = "15.4" # PostgreSQL version

# High Availability (Production Settings)
db_multi_az = true # Set to false for non-prod if needed

# Backup Configuration
db_backup_retention_days = 7 # 0-35 days, 7+ recommended for production

# Safety Controls
db_deletion_protection = true  # Set to false for non-prod if needed
db_skip_final_snapshot = false # Set to true for non-prod if needed
db_apply_immediately   = false # Set to true for non-prod if needed

# Example Non-Production Configuration:
# project_name             = "myapp"
# environment              = "dev"
# db_instance_class        = "db.t3.small"
# db_allocated_storage     = 20
# db_max_allocated_storage = 100
# db_multi_az              = false
# db_backup_retention_days = 1
# db_deletion_protection   = false
# db_skip_final_snapshot   = true
# db_apply_immediately     = true

# Example Production Configuration:
# project_name             = "myapp"
