# Backend Configuration Example
# Copy this file to backend.tf and fill in your values
#
# For local development, you can use -backend=false with terraform init
# For CI/CD, configure these values via environment variables or tfvars

terraform {
  backend "s3" {
    # S3 bucket for storing Terraform state
    # Must be globally unique and created before running terraform init
    bucket = "your-company-terraform-state"

    # Path within the bucket to store state file
    # Use different keys for different environments
    key = "portfolio/infrastructure/terraform.tfstate"

    # AWS region where the S3 bucket is located
    region = "us-west-2"

    # Enable encryption at rest for state file
    encrypt = true

    # DynamoDB table for state locking (prevents concurrent modifications)
    # Create this table with partition key "LockID" (String)
    dynamodb_table = "terraform-state-locks"

    # Optional: Use a specific IAM role for accessing state
    # role_arn = "arn:aws:iam::ACCOUNT_ID:role/TerraformStateAccess"

    # Optional: Use workspace-based state files
    # workspace_key_prefix = "workspaces"
  }
}

# To create the backend resources, run these commands first:
#
# aws s3 mb s3://your-company-terraform-state --region us-west-2
#
# aws s3api put-bucket-versioning \
#   --bucket your-company-terraform-state \
#   --versioning-configuration Status=Enabled
#
# aws s3api put-bucket-encryption \
#   --bucket your-company-terraform-state \
