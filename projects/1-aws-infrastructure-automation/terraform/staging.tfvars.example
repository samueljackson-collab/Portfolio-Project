# Staging Environment Configuration
# Copy to staging.tfvars and customize values

# Environment identifier
environment = "staging"

# AWS region for deployment
region = "us-west-2"

# VPC Configuration
vpc_cidr              = "10.1.0.0/16"
availability_zones    = ["us-west-2a", "us-west-2b", "us-west-2c"]
private_subnet_cidrs  = ["10.1.1.0/24", "10.1.2.0/24", "10.1.3.0/24"]
public_subnet_cidrs   = ["10.1.101.0/24", "10.1.102.0/24", "10.1.103.0/24"]
database_subnet_cidrs = ["10.1.201.0/24", "10.1.202.0/24", "10.1.203.0/24"]

# Application Auto Scaling Group
app_instance_type    = "t3.small"
app_min_size         = 2
app_max_size         = 4
app_desired_capacity = 2

# Database Configuration
db_username = "portfolio_staging"
db_password = "REPLACE_WITH_SECURE_PASSWORD"  # Use: export TF_VAR_db_password="your-password"

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100"

# Optional: Custom bucket name
# static_site_bucket_name = "my-portfolio-static-staging"

# Optional: ACM Certificate ARN for HTTPS
# acm_certificate_arn = "arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERT_ID"
