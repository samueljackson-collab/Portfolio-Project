# Production Environment Configuration
# Copy to production.tfvars and customize values
# IMPORTANT: Review all values carefully before deploying to production

# Environment identifier
environment = "production"

# AWS region for deployment
region = "us-west-2"

# VPC Configuration - Production uses larger CIDR ranges
vpc_cidr              = "10.2.0.0/16"
availability_zones    = ["us-west-2a", "us-west-2b", "us-west-2c"]
private_subnet_cidrs  = ["10.2.1.0/24", "10.2.2.0/24", "10.2.3.0/24"]
public_subnet_cidrs   = ["10.2.101.0/24", "10.2.102.0/24", "10.2.103.0/24"]
database_subnet_cidrs = ["10.2.201.0/24", "10.2.202.0/24", "10.2.203.0/24"]

# Application Auto Scaling Group - Production capacity
app_instance_type    = "t3.medium"
app_min_size         = 3
app_max_size         = 10
app_desired_capacity = 3

# Database Configuration
# CRITICAL: Use AWS Secrets Manager or SSM Parameter Store in production
# Never commit actual production credentials
db_username = "portfolio_prod"
db_password = "REPLACE_WITH_SECURE_PASSWORD"  # Use: export TF_VAR_db_password="your-password"

# CloudFront Configuration - All edge locations for best performance
cloudfront_price_class = "PriceClass_All"

# Custom bucket name (required for production)
# static_site_bucket_name = "my-portfolio-static-prod"

# ACM Certificate ARN for HTTPS (required for production)
# acm_certificate_arn = "arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERT_ID"
