{
  "dashboard": {
    "title": "MLOps Platform Dashboard",
    "tags": ["ml", "mlops", "model-serving"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Inference Requests/sec",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(model_inference_requests_total[1m]))",
            "legendFormat": "RPS"
          }
        ],
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Model Accuracy",
        "type": "stat",
        "targets": [
          {
            "expr": "model_accuracy_score",
            "legendFormat": "{{ model_name }}"
          }
        ],
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.85, "color": "yellow"},
                {"value": 0.95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Active Training Jobs",
        "type": "stat",
        "targets": [
          {
            "expr": "count(training_job_status{status=\"running\"} == 1)",
            "legendFormat": "Running"
          }
        ],
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0}
      },
      {
        "id": 4,
        "title": "Inference Latency (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(model_inference_duration_seconds_bucket[5m]))",
            "legendFormat": "{{ model_name }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "GPU Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "DCGM_FI_DEV_GPU_UTIL",
            "legendFormat": "GPU {{ gpu }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "yaxes": [
          {"format": "percent", "label": "GPU %", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Training Loss",
        "type": "graph",
        "targets": [
          {
            "expr": "training_loss",
            "legendFormat": "{{ job_name }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "yaxes": [
          {"format": "short", "label": "Loss", "logBase": 10},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Data Drift Score",
        "type": "graph",
        "targets": [
          {
            "expr": "data_drift_score",
            "legendFormat": "{{ feature_set }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "yaxes": [
          {"format": "short", "label": "Drift Score", "max": 1, "min": 0},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.3], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "1h", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "Data Drift Alert"
        }
      },
      {
        "id": 8,
        "title": "Model Predictions Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(model_predictions_total[5m])",
            "legendFormat": "{{ model_name }} - {{ prediction_class }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "yaxes": [
          {"format": "short", "label": "Predictions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Feature Store Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(feature_store_retrieval_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(feature_store_retrieval_duration_seconds_bucket[5m]))",
            "legendFormat": "P50"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      }
    ]
  }
}
