# Grafana admin credentials (password must be at least 12 characters with upper, lower, number, and symbol)
GRAFANA_ADMIN_USER=grafana-admin
GRAFANA_ADMIN_PASSWORD=change_me_with_strong_password

# Alertmanager notification secrets
ALERTMANAGER_SLACK_API_URL=https://hooks.slack.com/services/REPLACE/ME
ALERTMANAGER_PAGERDUTY_SERVICE_KEY=REPLACE_WITH_PAGERDUTY_INTEGRATION_KEY
ALERTMANAGER_SMTP_SMARTHOST=smtp.example.com:587
ALERTMANAGER_SMTP_FROM=alertmanager@example.com
ALERTMANAGER_SMTP_USERNAME=alertmanager@example.com
ALERTMANAGER_SMTP_PASSWORD=replace-with-smtp-app-password

# Thanos object store credentials (S3 or MinIO). Use IAM roles in production when possible.
THANOS_S3_BUCKET=thanos-metrics-storage
THANOS_S3_ENDPOINT=s3.us-east-1.amazonaws.com
THANOS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=replace-with-access-key
AWS_SECRET_ACCESS_KEY=replace-with-secret-key
