{
  "dashboard": {
    "title": "Multi-region Disaster Recovery Dashboard",
    "tags": ["dr", "disaster-recovery", "multi-region"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Region Health Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\".*-region\"}",
            "legendFormat": "{{region}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "thresholds": {
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Replication Lag",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rds_replication_lag_seconds",
            "legendFormat": "{{database}} - {{region}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 3,
        "title": "RPO Status",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "dr_recovery_point_objective_seconds",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 3600,
            "thresholds": {
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1800, "color": "yellow"},
                {"value": 3000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "S3 Replication Status",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(s3_replication_objects_total[5m])",
            "legendFormat": "Replicated",
            "refId": "A"
          },
          {
            "expr": "rate(s3_replication_failed_objects[5m])",
            "legendFormat": "Failed",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "title": "Failover Readiness Score",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 12, "y": 10},
        "targets": [
          {
            "expr": "dr_failover_readiness_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": null, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Backup Status by Region",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "backup_status",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      }
    ]
  }
}
