{
  "dashboard": {
    "title": "IoT Data Analytics Dashboard",
    "tags": ["iot", "mqtt", "sensors"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "15s",
    "panels": [
      {
        "id": 1,
        "title": "Active Devices",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(iot_device_last_seen_seconds < 60)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Data Ingestion Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(iot_data_points_ingested_total[1m])",
            "legendFormat": "Points/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "MQTT Message Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(mqtt_broker_messages_received_total[1m])",
            "legendFormat": "Received/sec",
            "refId": "A"
          },
          {
            "expr": "rate(mqtt_broker_messages_sent_total[1m])",
            "legendFormat": "Sent/sec",
            "refId": "B"
          }
        ]
      },
      {
        "id": 4,
        "title": "Device Temperature Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "iot_device_temperature_celsius",
            "format": "time_series",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Device Status by Type",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "count by (device_type) (iot_device_last_seen_seconds < 300)",
            "legendFormat": "{{device_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Edge Node Performance",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(edge_node_processed_events[5m])",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
