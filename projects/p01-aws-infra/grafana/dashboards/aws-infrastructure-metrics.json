{
  "dashboard": {
    "id": null,
    "uid": "p01-aws-infra",
    "title": "P01 - AWS Infrastructure Metrics",
    "tags": ["aws", "infrastructure", "p01", "vpc", "rds"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "RDS CPU Utilization",
        "targets": [
          {
            "refId": "A",
            "namespace": "AWS/RDS",
            "metricName": "CPUUtilization",
            "dimensions": {
              "DBInstanceIdentifier": ["$db_instance"]
            },
            "statistics": ["Average"],
            "period": "300"
          }
        ],
        "yaxes": [
          {"label": "Percent", "format": "percent"},
          {"label": null, "format": "short"}
        ],
        "thresholds": [
          {"value": 80, "color": "yellow"},
          {"value": 90, "color": "red"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "RDS Database Connections",
        "targets": [
          {
            "refId": "A",
            "namespace": "AWS/RDS",
            "metricName": "DatabaseConnections",
            "dimensions": {
              "DBInstanceIdentifier": ["$db_instance"]
            },
            "statistics": ["Average"],
            "period": "300"
          }
        ],
        "yaxes": [
          {"label": "Connections", "format": "short"},
          {"label": null, "format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "RDS Read/Write Latency",
        "targets": [
          {
            "refId": "A",
            "namespace": "AWS/RDS",
            "metricName": "ReadLatency",
            "dimensions": {
              "DBInstanceIdentifier": ["$db_instance"]
            },
            "statistics": ["Average"],
            "period": "300"
          },
          {
            "refId": "B",
            "namespace": "AWS/RDS",
            "metricName": "WriteLatency",
            "dimensions": {
              "DBInstanceIdentifier": ["$db_instance"]
            },
            "statistics": ["Average"],
            "period": "300"
          }
        ],
        "yaxes": [
          {"label": "Milliseconds", "format": "ms"},
          {"label": null, "format": "short"}
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "NAT Gateway Bytes Processed",
        "targets": [
          {
            "refId": "A",
            "namespace": "AWS/NATGateway",
            "metricName": "BytesInFromSource",
            "dimensions": {
              "NatGatewayId": ["$nat_gateway"]
            },
            "statistics": ["Sum"],
            "period": "300"
          },
          {
            "refId": "B",
            "namespace": "AWS/NATGateway",
            "metricName": "BytesOutToDestination",
            "dimensions": {
              "NatGatewayId": ["$nat_gateway"]
            },
            "statistics": ["Sum"],
            "period": "300"
          }
        ],
        "yaxes": [
          {"label": "Bytes", "format": "bytes"},
          {"label": null, "format": "short"}
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "stat",
        "title": "RDS Free Storage Space",
        "targets": [
          {
            "refId": "A",
            "namespace": "AWS/RDS",
            "metricName": "FreeStorageSpace",
            "dimensions": {
              "DBInstanceIdentifier": ["$db_instance"]
            },
            "statistics": ["Average"],
            "period": "300"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "red"},
            {"value": 5000000000, "color": "yellow"},
            {"value": 10000000000, "color": "green"}
          ]
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "stat",
        "title": "RDS Memory Utilization",
        "targets": [
          {
            "refId": "A",
            "namespace": "AWS/RDS",
            "metricName": "FreeableMemory",
            "dimensions": {
              "DBInstanceIdentifier": ["$db_instance"]
            },
            "statistics": ["Average"],
            "period": "300"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "db_instance",
          "type": "query",
          "label": "DB Instance",
          "query": "CloudWatch Metrics: AWS/RDS DBInstanceIdentifier",
          "current": {
            "text": "dev-postgres-db",
            "value": "dev-postgres-db"
          },
          "refresh": 1
        },
        {
          "name": "nat_gateway",
          "type": "query",
          "label": "NAT Gateway",
          "query": "CloudWatch Metrics: AWS/NATGateway NatGatewayId",
          "current": {
            "text": "nat-xxxxx",
            "value": "nat-xxxxx"
          },
          "refresh": 1
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
