{
  "dashboard": {
    "title": "Kubernetes CI/CD Dashboard",
    "tags": ["kubernetes", "cicd", "argocd", "jenkins"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Cluster Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(kube_node_status_condition{condition=\"Ready\",status=\"true\"})",
            "legendFormat": "Ready Nodes",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Pod Status",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "count by (phase) (kube_pod_status_phase)",
            "legendFormat": "{{phase}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "CI/CD Pipeline Success Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 8, "y": 4},
        "targets": [
          {
            "expr": "rate(jenkins_job_success_total[5m]) / rate(jenkins_job_total[5m]) * 100",
            "legendFormat": "Success Rate %",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Pod CPU Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "ArgoCD Applications Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "argocd_app_info",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      }
    ]
  }
}
