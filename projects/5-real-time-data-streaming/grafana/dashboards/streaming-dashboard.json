{
  "dashboard": {
    "title": "Real-time Data Streaming Dashboard",
    "tags": ["streaming", "kafka", "flink"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Kafka Message Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messagesin_total[1m])",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Consumer Lag",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "kafka_consumergroup_lag",
            "legendFormat": "{{consumergroup}} - {{topic}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Flink Job Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "count(flink_jobmanager_job_uptime_seconds > 0)",
            "legendFormat": "Running Jobs",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Stream Processing Throughput",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(stream_records_processed_total[1m])",
            "legendFormat": "{{processor}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
