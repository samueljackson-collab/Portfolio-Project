{
  "title": "Portfolio Orchestration Overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": ["portfolio", "orchestration"],
  "panels": [
    {
      "type": "stat",
      "title": "API Request Rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4}
    },
    {
      "type": "stat",
      "title": "95th Percentile Latency",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))"
        }
      ],
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4}
    },
    {
      "type": "timeseries",
      "title": "Orchestration Run Counters",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (status) (increase(orchestration_runs_total[1h]))"
        }
      ],
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8}
    },
    {
      "type": "logs",
      "title": "Collector Logs",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "{container=\"otel-collector\"}"
        }
      ],
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8}
    }
  ]
}
