# Wiki.js Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_PASSWORD=your_secure_password_here

# Domain Configuration
DOMAIN=wiki.example.com
CERTBOT_EMAIL=admin@example.com

# Wiki.js API Configuration
WIKIJS_URL=http://localhost:3000
WIKIJS_TOKEN=your_api_token_here

# SMTP Configuration (Optional)
MAIL_SERVICE=gmail
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password

# SSL Configuration (Optional)
SSL_ACTIVE=false
SSL_PORT=3443

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=  # IMPORTANT: Generate a strong random password before deploying

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MATOMO_SITE_ID=1
MATOMO_URL=https://analytics.example.com

# Security
SESSION_SECRET=generate_random_string_here
JWT_SECRET=generate_another_random_string_here

# Performance
NODE_ENV=production
CACHE_ENABLED=true
CACHE_TTL=3600
